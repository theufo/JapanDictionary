<UserControl x:Class="JapanDictionary.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Open" Click="OpenFile"></Button>
            <TextBox x:Name="PathText" Width="150" Text="{Binding PathText}" Margin="10,0,10,0"/>
            <Button x:Name="SaveButton" Content="Save" Click="SaveFile" Margin="10,0,10,0"/>
            <Button x:Name="ConvertButton" Content="Convert" Click="ConvertFile"/>
        </StackPanel>
    </Grid>
</UserControl>
